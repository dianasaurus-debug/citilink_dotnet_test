@model RestaurantBooking.Models.Reservation

@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
@{
    ViewData["Title"] = "Do Reservation Now";
    ViewData["Active"] = "Reservation";
}

<div class="container-fluid py-5">
    <h3>Seat Reservation</h3>

    @if (ViewBag.isFailed >= 1)
    {
        <div class="alert alert-danger" role="alert">
            We Apologize.. your reservation can't be created because there is no table available :( code : @(ViewBag.isFailed)
        </div>
    }
    <div>

    </div>
    <div class="row py-5 justify-content-center align-items-center">
        <div class="col-8" style="text-align : left !important">
            <form class="row gy-3" asp-action="Store">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-4">
                    <label for="inputEmail4" class="form-label">Nama Lengkap</label>
                    <input asp-for="Customer.FullName" class="form-control" />
                    <span asp-validation-for="Customer.FullName" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label for="inputPassword4" class="form-label">Phone number</label>
                    <input asp-for="Customer.Phone" class="form-control" />
                    <span asp-validation-for="Customer.Phone" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label for="inputPassword4" class="form-label">E-Mail</label>
                    <input asp-for="Customer.Email" type="email" class="form-control" />
                    <span asp-validation-for="Customer.Email" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label for="inputEmail4" class="form-label">Number of Guests</label>
                    <input asp-for="GuestCount" type="number" class="form-control" />
                    <span asp-validation-for="GuestCount" class="text-danger"></span>
                </div>
                <div class="col-md-8">
                    <label for="inputPassword4" class="form-label">Date & Time</label>
                    <input asp-for="ReservationTime" type="datetime-local" class="form-control" />
                    <span asp-validation-for="ReservationTime" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label for="inputAddress" class="form-label">Leave a special note (if needed)</label>
                    <textarea asp-for="Notes" class="form-control"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <div class="col-12 mt-5">
                    <button type="submit" value="Create" class="btn btn-danger">Reserve Now!</button>
                </div>
            </form>
        </div>
    </div>
</div>
