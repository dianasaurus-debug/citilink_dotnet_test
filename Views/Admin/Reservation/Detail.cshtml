@model RestaurantBooking.Models.Reservation

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Active"] = "Reservation";

}

<h1>Detail</h1>

<div>
    <div class="row">
        <div class="col-4">
            <div class="d-flex flex-column justify-content-between">
                <h4>Data Customer</h4>
                <dl class="row">
                    <dt class="col-sm-4">
                        ID Customer
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Customer.ID)
                    </dd>
                    <dt class="col-sm-4">
                        Nama Lengkap
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Customer.FullName)
                    </dd>
                    <dt class="col-sm-4">
                        No HP
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Customer.Phone)
                    </dd>
                    <dt class="col-sm-4">
                        E-Mail
                    </dt>
                    <dd class="col-sm-8">
                       
                        @Html.DisplayFor(model => model.Customer.Email)
                    </dd>
                </dl>
                <h4 class="mt-3">Data Reservasi</h4>
                    <dl class="row">
                        <dt class="col-sm-4">
                            ID Reservasi
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.ID)
                        </dd>
                        <dt class="col-sm-4">
                            Kode
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.ReservationCode)
                        </dd>
                        <dt class="col-sm-4">
                            Waktu
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.ReservationTime)
                        </dd>
                        <dt class="col-sm-4">
                            Jumlah Orang
                        </dt>
                        <dd class="col-sm-8">

                            @Html.DisplayFor(model => model.GuestCount)
                        </dd>
                        <dt class="col-sm-4">
                           Berlaku
                        </dt>
                        <dd class="col-sm-8">

                            @(Model.IsValid == true ? "Yes" : "No")
                        </dd>
                        <dt class="col-sm-4">
                            Catatan
                        </dt>
                        <dd class="col-sm-8">

                            @Html.DisplayFor(model => model.Notes)
                        </dd>
                    </dl>
                <div>
                    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
        <div class="col-8">
            <h5 class="mb-3">Daftar Meja untuk Reservasi @Model.ReservationCode</h5>
            @if (Model.ReservationTables.Count == 0)
            {
                <div class="d-flex flex-column justify-content-center align-items-center">
                    <h6 class="text-center mb-3">Tidak ada data meja</h6>
                </div>
            }
            else
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">
                                Nomor Meja
                            </th>
                            <th scope="col">
                                Jumlah Kursi
                            </th>
                            <th scope="col">Action</th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var guestTable in Model.ReservationTables)
                        {
                            <tr>
                                <td>@guestTable.GuestTable.TableNumber</td>
                                <td>@guestTable.GuestTable.SeatCount</td>
                                <td class="d-flex">
                                    <a type="button" asp-action="Detail" asp-route-id="@guestTable.GuestTable.ID" asp-controller="GuestTable" class="btn btn-success me-2"><i class="fas fa-eye"></i></a>
                                    <a type="button" class="btn btn-primary me-2"><i class="fas fa-edit"></i></a>
                                    <a type="button" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            }


        </div>
    </div>
</div>
