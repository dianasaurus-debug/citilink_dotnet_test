@model RestaurantBooking.Models.MenuCategory

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Active"] = "MenuCategory";

}

<h1>Create</h1>

<form asp-action="Store">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-8">
            <div class="d-flex flex-column justify-content-between">
                <dl class="row">
                    <dt class="col-sm-2">
                        Nama
                    </dt>
                    <dd class="col-sm-10">
                        <div class="form-group">
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </dd>
                    <dt class="col-sm-2">
                        Deskripsi
                    </dt>
                    <dd class="col-sm-10">
                        <div class="form-group">
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </dd>
                    <dt class="col-sm-2">
                        Jenis
                    </dt>
                    <dd class="col-sm-10">
                        <div class="form-group">
                            <select asp-for="MenuType" class="form-control">
                                <option value="0">Makanan</option>
                                <option value="1">Minuman</option>
                            </select>
                            <span asp-validation-for="MenuType" class="text-danger"></span>
                        </div>
                    </dd>
                </dl>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>

        </div>
    </div>
</form>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
